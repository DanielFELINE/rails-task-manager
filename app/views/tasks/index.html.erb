<h1> Tasks list </h1>
<ul class="fa-ul">
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <li><span class="fa-li"><i class="far fa-check-square"></i></span><%= link_to task.title, task_path(task) %> . <%= link_to(task_path(task), method: :delete, data: { confirm: "Are you sure?" }) do %><i class="far fa-trash-alt"></i>
            <% end %></li>
      <% else %>
        <li><span class="fa-li"><i class="far fa-square"></i></span><%= link_to task.title, task_path(task) %> . <%= link_to(task_path(task), method: :delete, data: { confirm: "Are you sure?" }) do %><i class="far fa-trash-alt"></i>
            <% end %></li>
      <% end %>
    <% end %>
</ul>
<br>
<p><i class="fas fa-plus"></i> <%= link_to "add new task", new_path %></p>
